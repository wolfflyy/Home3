{% extends 'base.html.twig' %}

{% block title %} {{ parent ()}} {% endblock %}

{% block body %}
    <div id="mainer" class="mainer">
        <div class="container-fluid container-max-width-xl">
            <div class="mt-4 justify-content-between line-b-f">
                <h4>Browse Manga</h4>
                <div class="mt-4 d-flex filter">
                    <div class="mt-4 d-flex justify-content-between filter-head">
                        <tbody>
                        {% for genre in genres %}
                            {#                    <div class="item-id">#}
                            {#                        <td>{{ genre.id }}</td>#}
                            {#                        <td> {{ genre.GenreName }}</td>#}
                            {#                        <div class="item-button">#}
                            {#                        <a href="{{path('mangaByGenre',{'id':genre.id})}} " class='btn btn-success'>View</a>#}
                            {#                        </div>#}
                            {#                    </div>#}
                            <div class="section-body">
                                <ul class="genre-list">
                                <span>
                                    <a href="{{path('mangaByGenre',{'id':genre.id})}}" class="btn btn-success">{{ genre.GenreName }}</a>
                                </span>
                                </ul>
                            </div>
                        {% endfor %}
                        </tbody>
                    </div>
                </div>
                <div class="mt-4 browser-sorter">
                    <div>
                        <span>Reset Filter:</span>
                        <a class="ms-2" href="{{ path('app_category_manga') }}">Reset</a>
                    </div>
                </div>
                <div id="series-list" class="row row-cols-1 row-cols-sm-2 row-cols-lg-3 line-t series-list">
                    <div class="col item line-b is-hot no-flag">
                        <div class="mt-4 justify-content-between line-b-f">
                            <tbody>
                            {% for manga in mangas %}
                                <div class="col item line-b no-flag"></div>
                                <div class="mt-3">
                                    <td><img src="{{ asset('uploads/manga_image/' ~ manga.image)}}" height="400px" width="300px"></td>
                                </div>
                                <div class="item-name">
                                    <td><b class="text-muted">Title:</b> {{ manga.name }}</td>
                                </div>
                                <div class="item-price">
                                    <td><b class="text-muted">Price:</b> {{ manga.price }}</td>
                                </div>
                                <div class="item-date">
                                    <td><b class="text-muted">Date Create:</b> {{ manga.CreateDate|date('F j,Y') }}</td>
                                </div>
                                <div class="item-buttons">
                                    <td>
                                        <a href="{{ path('app_view_manga', {'id':manga.id})}}" class="btn btn-success">View</a>
                                    </td>
                                </div>
                            {% endfor %}
                            </tbody>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
