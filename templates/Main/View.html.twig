{% extends 'base.html.twig' %}

{% block title %} {{ parent ()}} {% endblock %}

{% block body %}
    <div id="mainer" class="mainer">
        <div class="container-fluid container-max-width-xl">
                    {% for manga in manga %}
                        <div class="mt-4 d-flex justify-content-between title-set">
                            <h3 class="item-name">{{ manga.Name }}</h3>
                            <div class="d-none d-md-inline-block align-self-baseline"></div>
                        </div>
                        <div class="row detail-set">
                            <div class="col-24 col-sm-8 col-md-6 attr-cover">
                                <td><img src="{{ asset('uploads/manga_image/' ~ manga.Image) }}" height="400px" width="300px"></td>
                            </div>
                        </div>
                        <div class="col-24 col-sm-16 col-md-18 mt-4 mt-sm-0 attr-main">
                            <div class="attr-item">
                                <b class="text-muted">Artist Name:</b>
                                <span>
                                    <a>{{ manga.Artist_name }}</a>
                                </span>
                            </div>
                            <div class="attr-item">
                                <b class="text-muted">Genre Name:</b>
                                <span>
                                    <a>{{ manga.Genre_name }}</a>
                                </span>
                            </div>
                            <div class="attr-item">
                                <b class="text-muted">Price:</b>
                                <span>
                                    <a>{{ manga.Price }}</a>
                                </span>
                            </div>
                            <div class="attr-item">
                                <b class="text-muted">Create Date:</b>
                                <span>
                                    <a>{{ manga.create_date|date('F j,Y') }}</a>
                                </span>
                            </div>
                            <h5 class="mt-3 text-muted">Description:</h5>
                            <div class="mt-3">
                                <div id="limit-height-ctrl-description" class="limit-height-ctrl max -100px contracted">
                                    <div id="limit-height-body-description" class="limit-height-body">
                                        <div class="limit-html">{{ manga.Description }}</div>
                                    </div>
                                </div>
                            </div>
                            <div class="mt-3">
                                <td>
                                    <div class="form-group">
                                        {{ form_label(form.quantity) }}
                                        {{ form_widget(form.quantity, {
                                            'attr': {
                                                'class': 'form-control ' ~ (form.quantity.vars.valid ? '' : 'is-invalid')
                                            }
                                        }) }}
                                        <div class="invalid-feedback">
                                            {{ form_errors(form.quantity) }}
                                        </div>
                                    </div>
                                    {{ form_widget(form.add, {'attr': {'class': 'btn btn-warning w-25'}}) }}
                                </td>
                            </div>
                        </div>
