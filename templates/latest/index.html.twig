{% extends 'base.html.twig' %}

{% block title %} {{ parent ()}} {% endblock %}

{% block body %}
    <div id="mainer" class="mainer">
        <div class="container-fluid container-max-width-xl">
            <div class="mt-4 flex-row createform">
                <div class="mt-4 flex-row justify-content-start createform-head">
                    <h4>Latest</h4>
                    <tbody>
                    {% for manga in manga %}
                        <div class="col item line-b no-flag"></div>
                        <div class="mt-3">
                            <td><img src="{{ asset('uploads/manga_image/' ~ manga.image)}}" height="400px" width="300px"></td>
                        </div>
                        <div class="item-name">
                            <td><b class="text-muted">Title:</b> {{ manga.name }}</td>
                        </div>
                        <div class="item-price">
                            <td><b class="text-muted">Price:</b> {{ manga.price }}</td>
                        </div>
                        {#                                    <div class="item-text">#}
                        {#                                    <td><b class="text-muted">Description:</b> {{ manga.description }}</td>#}
                        {#                                    </div>#}
                        <div class="item-date">
                            <td><b class="text-muted">Date Create:</b> {{ manga.CreateDate|date('F j,Y') }}</td>
                        </div>
                        <div class="item-buttons">
                            <td>
                                {#                                        <a href="{{ path('app_edit_manga', {'id':manga.id})}}" class="btn btn-success">Edit</a>#}
                                <a href="{{ path('app_view_manga', {'id':manga.id})}}" class="btn btn-success">View</a>
                                {#                                        <a href="{{ path('app_delete_manga', {'id':manga.id})}}" class="btn btn-danger">Delete</a>#}
                                {#                                        <div class="form-group">#}
                                {#                                            <label for="quantity">Quantity:</label>#}
                                {#                                            <input type="number" class="form-control" id="quantity">#}
                                {#                                        </div>#}
                                {#                                        <button class="btn btn-warning">Add to Cart</button>#}
                            </td>
                        </div>
                    {% endfor %}
                    </tbody>
                </div>
            </div>
        </div>
    </div>
{% endblock %}