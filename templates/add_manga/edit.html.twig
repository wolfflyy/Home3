{% extends 'base.html.twig' %}

{% block title %} {{ parent ()}} {% endblock %}

{% block body %}
    <div id="mainer" class="mainer">
        <div class="container-fluid container-max-width-xl">
            <div class="mt-4 flex-row createform">
                <div class="mt-4 flex-row justify-content-start createform-head">
                    <h4>Add Manga</h4>
                    {{ form_start(form) }}
                    <div class="form-group">
                        <label for="name">Name:</label>
                        {{ form_widget(form.name,{
                            'attr':{
                                'class':'form-control',
                                'placeholder': 'Manga name'
                            }
                        }) }}
                        <div class="invalid-feedback">
                            {{ form_errors(form.name) }}
                        </div>
                    </div>
                    <div class="form-group">
                        <label for="artist">Artist Name:</label>
                        {{ form_widget(form.artist,{
                            'attr':{
                                'class':'form-control',
                                'placeholder': 'Artist name'
                            }
                        }) }}
                    <div class="form-group">
                        <label for="genre">Genre Name:</label>
                        {{ form_widget(form.genre,{
                            'attr':{
                                'class':'form-control',
                                'placeholder': 'Genre name'
                            }
                        }) }}
                    </div>
                    <div class="form-group">
                        <label for="description">Description:</label>
                        {{ form_widget(form.description,{
                            'attr':{
                                'class':'form-control',
                                'placeholder': 'Description'
                            }
                        }) }}
                    </div>
                    <div class="form-group">
                        <label for="price">Price:</label>
                        {{ form_widget(form.price,{
                            'attr':{
                                'class':'form-control',
                                'placeholder': 'Price'
                            }
                        }) }}
                    </div>
                    <div class="form-group">
                        <label for="createDate">Create Date:</label>
                        {{ form_widget(form.create_date,{
                            'attr':{
                                'class':'form-control',
                                'placeholder': 'Pick a date'
                            }
                        }) }}
                    </div>
                    <div class="form-group">
                        <label for="image">Image</label>
                        {{ form_widget(form.image,{
                            'attr':{
                                'placeholder': 'Please select a picture'
                            }
                        }) }}
                    </div>
{#                    <div class="mt-md-2 flex-column buttons">#}
{#                        <a href="{{path('app_edit_manga',{'id':manga.id})}} " class='btn btn-default'>Edit</a>#}
{#                    </div>#}
                    <input type="submit" name="edit_product" value="Edit" class="btn btn-primary"/>
                    {{ form_end(form) }}
                </div>
            </div>
        </div>
    </div>
{% endblock %}